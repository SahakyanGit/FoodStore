@model FoodStore.WebUI.Models.ProductsListViewModel

@{
    ViewBag.Title = "Details";
}

@{
    string img = null;
}
<style>
    body {
        background: #f5f5f5;
    }

    .pic-content {
        width: 300px;
        background: #fff;
        margin: 0 auto;
        margin-top: 30px;
    }

    .title {
        width: 300px;
        position: absolute;
        z-index: 1000;
        background: rgba(0,0,0,0.5);
        padding: 7px;
        color: aliceblue;
        text-align: center;
    }

    img {
        position: relative;
    }
</style>



@foreach (var p in Model.Products)
{
    img = p.Name + ".png";
    <div class="pic-content">
        <span class="title">@p.Name</span>
        <img src="~/Resources/Images/@img" />
    </div>
    <div class="lead">
        <p>Category - @p.Category</p>
        <p>Description - @p.Description</p>
        <p>Price - @p.Price.ToString("c")</p>
    </div>

}



